<?xml version="1.0"?>
<openerp>
    <data>

        <!-- Form view -->
        <record id="mass_stock_move_form" model="ir.ui.view">
            <field name="name">Mass Stock Moves</field>
            <field name="model">mass.stock.move</field>
            <field name="arch" type="xml">
                <form string="Stock Move">
                    <header>
                        <button name="prepare_inventory" states="d" type="object" string="Start"/>
                        <button name="validate_inventory" states="i" type="object" string="Validate"/>
                        <button name="set_draft" states="i" type="object" string="Cancel"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group colspan="4">
                            <field name="name"/>
                            <field name="date"/>
                            <field name="user_id"/>
                            <field name="filter" widget="radio"/>
                            <field name="location_id" domain="[('usage','=','internal')]"/>
                            <field name="location_dest_id" domain="[('usage','=','internal')]"/>
                        </group>
                        <group colspan="4">
                            <field name="line_ids" nolabel="1">
                                <tree editable="top">
                                    <field name="product_id"/>
                                    <field name="product_uom"/>
                                    <field name="product_uom_qty"/>
                                    <field name="theoretical_qty"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="mass_stock_move_tree" model="ir.ui.view">
            <field name="name">Mass Stock Moves</field>
            <field name="model">mass.stock.move</field>
            <field name="arch" type="xml">
                <tree string="Stock Move">
                    <field name="name"/>
                    <field name="date"/>
                    <field name="user_id"/>
                    <field name="filter"/>
                    <field name="line_ids" nolabel="1"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>


        <!-- Action to open issue task's -->
        <record id="mass_stock_move_action" model="ir.actions.act_window">
            <field name="name">Mass Stock Moves</field>
            <field name="res_model">mass.stock.move</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="mass_stock_move_tree"/>
        </record>

        <!-- Menu item	to open	issue task -->
        <menuitem id="mass_stock_move_menu"
                  name="Mass Stock Moves"
                  parent="stock.menu_traceability"
                  sequence="100"
                  action="mass_stock_move_action"
                  groups="stock.group_locations"/>
    </data>
</openerp>
